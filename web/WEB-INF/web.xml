<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!--访问统计-->
    <servlet-mapping>
        <servlet-name>AccessServlet</servlet-name>
        <url-pattern>/Access</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AccessServlet</servlet-name>
        <servlet-class>main.notes.servlet.AccessServlet</servlet-class>
    </servlet>

    <!--所有文件详情-->
    <servlet-mapping>
        <servlet-name>NotesDetailServlet</servlet-name>
        <url-pattern>/notes/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>NotesDetailServlet</servlet-name>
        <servlet-class>main.notes.servlet.NotesDetailServlet</servlet-class>
    </servlet>

    <!--文章列表-->
    <servlet-mapping>
        <servlet-name>ArticleListServlet</servlet-name>
        <url-pattern>/ArticleList</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ArticleListServlet</servlet-name>
        <servlet-class>main.notes.servlet.ArticleListServlet</servlet-class>
    </servlet>

    <!--随笔列表-->
    <servlet-mapping>
        <servlet-name>EssayListServlet</servlet-name>
        <url-pattern>/EssayList</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EssayListServlet</servlet-name>
        <servlet-class>main.notes.servlet.EssayListServlet</servlet-class>
    </servlet>

    <!--遍历文件列表-->
    <servlet-mapping>
        <servlet-name>NoteListServlet</servlet-name>
        <url-pattern>/NoteList</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>NoteListServlet</servlet-name>
        <servlet-class>main.notes.servlet.NoteListServlet</servlet-class>
    </servlet>

</web-app>