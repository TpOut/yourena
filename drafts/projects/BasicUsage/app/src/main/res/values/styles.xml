<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="PagerSlidingTabStrip">
        <attr name="pstsTabPaddingLeftRight" format="integer"/>
        <attr name="pstsShouldExpand" format="boolean"/>
        <attr name="pstsScrollOffset" format="integer"/>
        <attr name="pstsTextAllCaps" format="boolean"/>
        <attr name="pstsItemIconTint" format="reference"/>
        <attr name="pstsItemTextColor" format="reference"/>
        <attr name="pstsThumbColor" format="color"/>
    </declare-styleable>

</resources>
